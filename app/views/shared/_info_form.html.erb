<%@user = User.find(1)%>
<%@infotype = Infotype.find(params[:id])%>
<%= form_for(Info.new) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="field">
        <%= f.label :title %>
        <br>
        <%= f.text_area :title, size: '10x1', placeholder: "Title..." %>
        <br>
        <%= f.label :content %>
        <br>
        <%= f.text_area :content, size: '20x10', placeholder: "Compose new information..." %>
        <br>
        <%= f.label @infotype.name %>
        <%= f.hidden_field :infotype_id, :value => @infotype.id %> 
      </div>
      <%= f.submit "Post", class: "btn btn-large btn-primary" %>
    <% end %>